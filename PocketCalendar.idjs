            myLanguages.push(localeData[locKey].name);
            myLocales.push(locKey);
        } else {
            alert("Not familiar with " + locKey);
        }
    }

    let mainCol = myDialog.dialogColumns.add();
    let topRow = mainCol.dialogRows.add();
    let borderPanA = topRow.borderPanels.add();
